{
    "schemes": [
        "http"
    ],
    "swagger": "2.0",
    "info": {
        "description": "httpbin.org clone implemented with Go + Gin by Elif ERDEN.",
        "title": "HTTPBin Clone",
        "contact": {},
        "version": "1.0"
    },
    "basePath": "/",
    "paths": {
        "/basic-auth/{user}/{passwd}": {
            "get": {
                "description": "Basic Auth with username and password",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Basic Authentication",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Username",
                        "name": "user",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Password",
                        "name": "passwd",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}